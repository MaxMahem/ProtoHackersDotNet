<DataTemplate xmlns="https://github.com/avaloniaui"
			  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:i="using:ProtoHackersDotNet.Servers.Interfaces"
			  xmlns:mv="using:ProtoHackersDotNet.GUI.MainView"
			  x:DataType="mv:DisplayMessage"
			  x:Class="ProtoHackersDotNet.GUI.MainView.DisplayMessageTemplate">
	<Grid RowDefinitions="Auto">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="5*" />
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Column="0" Grid.Row="0"
							 Text="{Binding Source}"
							 Classes="cell"/>
		<TextBlock Grid.Column="1" Grid.Row="0"
							 Text="{Binding Timestamp}"
							 HorizontalAlignment="Center"
							 Classes="mono cell"/>
		<TextBlock Grid.Column="2" Grid.Row="0"
							 Text="{Binding Type}"
							 Classes="mono"/>
		<TextBlock Grid.Column="3" Grid.Row="0"
							 Text="{Binding Message}"
							 Classes="mono"/>
	</Grid>
</DataTemplate>